{
    "appId": "com.psychopathpotato.expanse",
    "files": ["dist-react","dist-electron"],
    "extraResources": [
        "dist-electron/preload.cjs",
        {
            "from": "src/models/expanse.db",
            "to": "expanse.db"
        },
        {
            "from": "ui/assets/icons",
            "to": "assets/icons"
        },
        {
            "from": "ui/assets/images",
            "to": "assets/images"
        }
    ],
    "icon": "./desktopIcon.png",
    "mac": {
        "category": "public.app-category.games",
        "target": "dmg"
    },
    "win": {
        "target": ["portable","msi"]   
    },
    "linux": {
        "target": ["AppImage"],
        "category": "Game"
    }
}